<% provide(:title, "People, please stop hurting people!") %>

<div class="wrapper">
	<section class="letter-container" id="mainbox">
		<p>People,</p> 
		<p>Please stop hurting people.</p>
		<p>Thanks,</p>
		<%= form_for(@signature, url: root_path(@signature), remote: true) do |f| %>
		
		<fieldset>
		  <%= f.text_field :name, :class => "signature-name" %>

		  <%= f.submit "Sign", :class => "signature-submit", disable_with: "Signing..." %>
		</fieldset>
		<% end %>
		<div id="response">
			<div id="message"></div>
			<div id="errors"></div>
		</div>
	</section><!-- / letter-container -->

	<section class="signatures-container" id="signatures">
		<%= render :partial => "signatures", :locals => {:signatures => @signatures, :signature_count => @signature_count} %>
	</section><!-- / signatures-container -->
</div> <!-- / wrapper -->
