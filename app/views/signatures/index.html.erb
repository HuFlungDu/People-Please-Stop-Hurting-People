<% provide(:title, "The petition to stop violence.") %>

<div class="wrapper">
	<section class="petition-container" id="petitionContainer">
		<p>People,</p> 
		<p>Please, stop hurting people.</p>
		<p>Thank you,</p>
		<%= form_for(@signature, url: root_path(@signature), remote: true) do |f| %>
		
		<fieldset>
		  <%= f.text_field :name, :class => "petition-form__sign-name", :id => "petitionFormName" %>

		  <%= f.submit "Sign", :class => "petition-form__sign-submit", :id => "petitionFormSubmit", disable_with: "Signing..." %>
		</fieldset>
		<% end %>
	</section><!-- / letter-container -->

	<section class="signatures-container" id="signatures">
		<div id="response">
			<h3 id="message"></h3>
			<h3 id="errors"></h3>
		</div>
		<%= render :partial => "signatures", :locals => {:signatures => @signatures, :signature_count => @signature_count} %>
	</section><!-- / signatures-container -->
</div> <!-- / wrapper -->
